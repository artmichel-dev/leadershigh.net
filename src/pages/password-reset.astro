---
import AuthLayout from '@layouts/AuthLayout.astro'
import Container from '@components/shared/Container.astro'
import ContainerOutline from '@components/shared/ContainerOutline.astro'
import FormHeader from '@components/auth/FormHeader.astro'
import Button from '@components/shared/Button.astro'
import TextField from '@components/forms/TextField.astro'
import { Icon } from 'astro-icon/components'
import { SITE } from '@config'
---

<AuthLayout
  title={`Password Reset - ${SITE.title}`}
  description="Need to reset your password? Follow the steps here to regain access to your Nebula account and resources."
>
  <Container class="max-w-lg py-5 sm:max-w-xl">
    <div class="relative z-10 flex flex-col shadow-inner-blur">
      <ContainerOutline />
      <FormHeader
        title="Reset your password"
        description="Enter your email below and we will send you an email with instruction to reset your password."
        socialButtons={false}
      />

      <form action="#" method="POST" class="mt-8 px-6 pb-10 sm:px-10">
        <div class="space-y-8">
          <TextField
            label="Email"
            name="email"
            type="email"
            auto-complete="email"
            placeholder="johnnybravo@gmail.com"
            required
          />
        </div>

        <div class="mt-10 flex items-center justify-between space-x-4">
          <p class="text-sm text-blue-100/75">
            Enter your email address and weâ€™ll send you a link to reset your password.
          </p>
          <Button type="submit" class="sm:px-5">
            <span>Reset password</span>
            <Icon name="heroicons:chevron-right-16-solid" class="h-4 w-4" />
          </Button>
        </div>
      </form>
    </div>
  </Container>
</AuthLayout>
