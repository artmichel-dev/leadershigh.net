---
import FooterCTA from '@components/shared/FooterCTA.astro'
import StarField from '@components/shared/StarField.astro'
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import { SOCIALS } from '@config'

import logo from '@images/logo.png'
import logoIcon from '@images/logo-icon.png'

interface Props {
  cta?: boolean
}

const { cta = true } = Astro.props

const navigation = [
  {
    icon: 'nucleo/browser-18',
    label: 'Product',
    links: [
      { name: 'Overview', href: '#' },
      { name: 'Integrations', href: '#' },
      { name: 'Solutions', href: '#' },
      { name: 'Tutorials', href: '#' },
      { name: 'Pricing', href: '/pricing' },
      { name: 'Releases', href: '#' },
    ],
  },
  {
    icon: 'nucleo/company-18',
    label: 'Company',
    links: [
      { name: 'About us', href: '/about' },
      { name: 'Careers', href: '#' },
      { name: 'Press', href: '#' },
      { name: 'News', href: '#' },
      { name: 'Media kit', href: '#' },
      { name: 'Contact', href: '/contact' },
    ],
  },
  {
    icon: 'nucleo/integrations-18',
    label: 'Integrations',
    links: [
      { name: 'Slack', href: '#' },
      { name: 'Trello', href: '#' },
      { name: 'Quickbooks', href: '#', new: true },
      { name: 'Dropbox', href: '#' },
      { name: 'Gmail', href: '#' },
      { name: 'Salesforce', href: '#' },
    ],
  },
  {
    icon: 'nucleo/resources-18',
    label: 'Resources',
    links: [
      { name: 'Blog', href: '#' },
      { name: 'Newsletter', href: '#' },
      { name: 'Events', href: '#' },
      { name: 'Help center', href: '#' },
      { name: 'Tutorials', href: '#' },
      { name: 'Support', href: '#' },
    ],
  },
  {
    icon: 'nucleo/scale-18',
    label: 'Legal',
    links: [
      { name: 'Terms', href: '#' },
      { name: 'Privacy', href: '#' },
      { name: 'Cookies', href: '#' },
      { name: 'Licenses', href: '#' },
      { name: 'Security', href: '#' },
      { name: 'Settings', href: '#' },
    ],
  },
]
---

<section class:list={[cta && 'overflow-hidden']}>
  <div class="relative">
    {cta && <FooterCTA />}

    {/* Stars */}
    <div
      class="absolute -bottom-4 left-1/2 -z-10 h-48 w-full max-w-3xl -translate-x-1/2 md:-bottom-8 md:h-64 lg:-bottom-12"
      aria-hidden="true"
    >
      <StarField density="medium" maxRadius={2.5} />
    </div>
  </div>
  <div
    class="relative left-1/2 top-2 w-[350%] -translate-x-1/2 rounded-t-[100%] bg-gradient-to-r from-transparent via-blue-100/15 to-transparent p-[0.5px] sm:w-[250%] md:top-4 md:w-[200%] lg:top-10 lg:w-[150%] xl:w-[125%]"
  >
    <div
      class="h-full w-full rounded-t-[100%] bg-[linear-gradient(rgba(24,24,27,0.9),rgba(24,24,27,0.9)),linear-gradient(#1E3A8A,#1E3A8A)] pb-16 pt-24 sm:pt-28 md:pt-32 lg:pt-40"
    >
      <div class="mx-auto w-screen">
        <div
          class="mx-auto max-w-lg px-5 sm:max-w-xl sm:px-6 md:max-w-3xl lg:max-w-screen-xl lg:px-8"
        >
          <div
            class="grid grid-cols-2 gap-12 sm:grid-cols-2 sm:gap-16 md:grid-cols-3 lg:grid-cols-5 lg:gap-8"
          >
            {
              navigation.map((navCol) => (
                <div class="flex lg:justify-center">
                  <div class="flex flex-col">
                    <div class="flex items-center">
                      <Icon name={navCol.icon} class="h-5 w-5" />
                      <h4 class="ml-4 flex flex-col align-middle text-sm font-semibold text-zinc-400">
                        {navCol.label}
                      </h4>
                    </div>
                    <div class="mt-6 flex items-start">
                      <div class="relative flex h-full w-5 justify-center">
                        <div class="absolute -inset-y-2 left-1/2 w-px -translate-x-1/2 bg-gradient-to-b from-blue-200/[0.12] to-blue-200/[0.04]" />
                      </div>
                      <ul class="ml-4 space-y-5">
                        {navCol.links.map((link) => (
                          <li class="group relative flex items-center">
                            <a
                              href={link.href}
                              class="text-sm font-semibold leading-none text-blue-50 hover:text-cyan-400/95"
                            >
                              {link.name}
                            </a>
                            {link.new && (
                              <div class="ml-3 inline-flex w-max rounded-full bg-zinc-950/[.01] shadow-inner-blur">
                                <div class="flex h-full w-full items-center space-x-2 rounded-full border border-blue-200/[.06] px-2 py-0.5">
                                  <span class="text-xs font-medium text-blue-200 drop-shadow-[-12px_-4px_6px_rgba(219,234,254,0.2)]">
                                    New
                                  </span>
                                </div>
                              </div>
                            )}
                            <span class="absolute -inset-y-1.5 -left-[26.5px] w-px bg-gradient-to-b from-cyan-400/0 via-cyan-400/90 to-cyan-400/0 opacity-0 duration-200 ease-in-out group-hover:opacity-100" />
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                </div>
              ))
            }
          </div>
          <div
            class="mt-16 block w-full rounded-2xl bg-zinc-950/[.01] shadow-inner-blur sm:mt-24"
          >
            <div
              class="flex w-full items-center justify-between space-x-5 rounded-2xl border border-blue-200/[.06] px-6 py-4 sm:space-x-8 sm:px-8 sm:py-6"
            >
              {/* Logo */}
              <div class="flex shrink-0 items-center">
                <a
                  href="/"
                  aria-label="Home"
                  class="flex flex-shrink-0 items-center"
                >
                  <Image
                    src={logo}
                    alt=""
                    class="h-6 w-auto sm:inline sm:h-7 xl:h-8"
                  />
                  <Image src={logoIcon} alt="" class="hidden h-8 w-auto" />
                </a>
              </div>
              <div
                class="flex items-center space-x-5 sm:space-x-7 lg:space-x-6 xl:space-x-12"
              >
                {
                  SOCIALS.map((social) => (
                    <a
                      href={social.href}
                      aria-label={social.ariaLabel}
                      class="group flex items-center space-x-2 text-sm font-semibold text-blue-50/90 drop-shadow-[-2px_-4px_6px_rgba(219,234,254,0.2)]"
                    >
                      <Icon
                        name={`nucleo/${social.name}`}
                        class="h-4 w-4 duration-200 ease-in-out group-hover:text-cyan-300/85"
                      />
                      <span class="hidden duration-200 ease-in-out group-hover:text-cyan-400/95 lg:inline">
                        {social.label}
                      </span>
                    </a>
                  ))
                }
              </div>
            </div>
          </div>
          <p class="mt-10 text-center text-[15px] text-zinc-400/90 sm:mt-12">
            Â© {new Date().getFullYear()} Nebula, Inc. All rights reserved.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
