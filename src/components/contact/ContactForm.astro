---
import TextField from '@components/forms/TextField.astro'
import SelectField from '@components/forms/SelectField.astro'
import Button from '@components/shared/Button.astro'
---

<form action="#" method="POST">
  <div
    class="space-y-8 sm:grid sm:grid-cols-2 sm:gap-x-6 sm:gap-y-8 sm:space-y-0"
  >
    <TextField
      label="First name"
      name="first-name"
      autocomplete="given-name"
      placeholder="Johnny"
      required
    />
    <TextField
      label="Last name"
      name="last-name"
      autocomplete="family-name"
      placeholder="Bravo"
      required
    />
    <SelectField label="Choose a topic" name="topic">
      <option selected>General</option>
      <option>Request a demo </option>
      <option>Talk to sales </option>
      <option>Support</option>
      <option>Feedback</option>
      <option>Found a bug</option>
    </SelectField>
    <TextField
      label="Email"
      name="email"
      type="email"
      auto-complete="email"
      placeholder="johnnybravo@gmail.com"
      required
    />
    <TextField
      label="Company name"
      name="company-name"
      placeholder="Johnny Bravo Enterprises"
      required
    />
    <SelectField label="Company size" name="company-size">
      <option selected>1-10</option>
      <option>10-20 </option>
      <option>20-50 </option>
      <option>50-100</option>
      <option>100-1000</option>
      <option>1000+</option>
    </SelectField>
  </div>
  <TextField
    className="mt-8"
    label="How can we help you?"
    name="message"
    rows={6}
    elementType="textarea"
    aria-describedby="message-description"
    placeholder="Enter your questions, feedback or suggestions..."
    required
  />
  <div class="mt-8 flex items-center justify-between space-x-4">
    <p class="text-sm text-blue-100/75">
      You can also email us atÂ <a
        class="text-cyan-300/80 underline duration-200 ease-in-out hover:text-cyan-300"
        href="mailto:sales@nebula.com">sales@nebula.com</a
      >
    </p>
    <Button type="submit" class="sm:px-5"> Send message </Button>
  </div>
</form>
