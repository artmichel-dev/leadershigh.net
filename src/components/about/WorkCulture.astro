                    <span class="text-xs font-medium leading-none text-violet-100 drop-shadow-[-12px_-4px_6px_rgba(237,233,254,0.2)]">
                      {photo.location}
                    </span>
                  </div>
                </div>
                <div class="absolute inset-x-2 bottom-2 rounded-b-lg bg-gradient-to-b from-violet-950/10 via-violet-950/40 to-violet-950/55">
                  <div class="px-4 py-8 md:px-5 lg:px-6 xl:px-8">
                    <p class="text-lg font-bold text-white md:text-xl lg:text-2xl">
                      {photo.username}
                    </p>
                    <p class="mt-1.5 text-base text-zinc-100 md:text-[17px] lg:text-lg">
                      {photo.caption}
                    </p>
                  </div>
                </div>
              </div>
            ))}
