---
import Button from '@components/shared/Button.astro'
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import logo from '@images/logo-icon.png'

interface Props {
  title: string
  description: string
  socialButtons?: boolean
}

const { title, description, socialButtons = true } = Astro.props
---

<div class="flex flex-col items-center px-6 pt-10 sm:px-10">
  <a href="/" class="flex flex-shrink-0" aria-label="Home">
    <Image src={logo} class="h-auto w-12" alt="Logo" />
  </a>
  <h1 class="mt-4 text-center text-3xl font-bold text-violet-100">{title}</h1>
  <p class="mt-1.5 text-center text-base leading-relaxed text-zinc-300">
    {description}
  </p>

  {
    socialButtons && (
      <div class="mt-8 flex w-full flex-col items-center gap-4 sm:flex-row">
        <Button
          href="/"
          variant="secondary"
          size="md"
          class="w-full max-w-60 bg-zinc-700/25 leading-6 sm:w-1/2 sm:max-w-none"
          innerClass="justify-between"
        >
          <div class="flex items-center">
            <Icon name="nucleo/google" class="mr-2 h-4 w-4" />
            Google
          </div>
          <Icon
            name="heroicons:chevron-right-16-solid"
            class="h-4 w-4 text-violet-100/75 duration-200 ease-in-out group-hover:text-violet-50/75"
          />
        </Button>
        <Button
          href="/"
          variant="secondary"
          size="md"
          class="w-full max-w-60 bg-zinc-700/25 leading-6 sm:w-1/2 sm:max-w-none"
          innerClass="justify-between"
        >
          <div class="flex items-center space-x-2">
            <Icon name="nucleo/github" class="mr-2 h-4 w-4" />
            Github
          </div>
          <Icon
            name="heroicons:chevron-right-16-solid"
            class="h-4 w-4 text-violet-100/75 duration-200 ease-in-out group-hover:text-violet-50/75"
          />
        </Button>
      </div>
    )
  }
</div>
